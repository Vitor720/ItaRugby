<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout">
<ScrollView android:layout_width="wrap_content" android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:src="@drawable/com_facebook_profile_picture_blank_square"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/player_imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        <TextView
                android:text="@string/player_name"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:id="@+id/player_name"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="144dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="@string/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_position" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/player_name"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_cake"
                android:id="@+id/imageViewCake"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/player_imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:id="@+id/player_birthday"
                android:text="@string/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageViewCake"
                android:layout_marginStart="08dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/player_imageView"/>
        <TextView
                android:id="@+id/bDay"
                android:text="@string/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/player_birthday"
                app:layout_constraintStart_toEndOf="@+id/imageViewCake"
                android:layout_marginStart="8dp"/>

        <View
                android:id="@+id/birthday_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewCake"
                app:layout_constraintTop_toBottomOf="@+id/bDay"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_contact_phone_black_48dp"
                android:id="@+id/imageViewContact"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCake"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:id="@+id/player_contact"
                android:text="@string/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/imageViewContact"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCake"/>
        <TextView
                android:text="@string/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                app:layout_constraintStart_toEndOf="@+id/imageViewContact"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/player_contact"/>
        <View
                android:id="@+id/contact_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewContact"
                app:layout_constraintTop_toBottomOf="@+id/contact"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:id="@+id/imageViewBody"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_accessibility"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewContact"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/player_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_body"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewContact"
                app:layout_constraintStart_toEndOf="@+id/imageViewBody"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/player_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/body"
                app:layout_constraintTop_toBottomOf="@+id/player_body"
                app:layout_constraintStart_toEndOf="@+id/imageViewBody"
                android:layout_marginStart="8dp"/>
        <View
                android:id="@+id/player_info_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintTop_toBottomOf="@+id/imageViewBody"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="@string/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_stats_header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/player_info_divider" android:textSize="18sp"
                android:textStyle="bold" android:fontFamily="sans-serif-medium"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/rugby_ball"
                android:id="@+id/imageViewBall"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/player_stats_header"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/player_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_since"
                app:layout_constraintStart_toEndOf="@+id/imageViewBall"
                android:layout_marginStart="8dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/player_stats_header"/>
        <TextView
                android:text="@string/player_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_since_txt"
                app:layout_constraintStart_toEndOf="@+id/imageViewBall"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/player_since"/>

        <View
                android:id="@+id/player_since_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewBall"
                app:layout_constraintTop_toBottomOf="@+id/player_since_txt"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/rugby_player"
                android:id="@+id/imageViewPlayer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewBall"/>
        <TextView
                android:text="@string/last_drill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_drill"
                app:layout_constraintStart_toEndOf="@+id/imageViewPlayer"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewBall"/>
        <TextView
                android:text="@string/last_drill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drill"
                app:layout_constraintTop_toBottomOf="@+id/last_drill"
                app:layout_constraintStart_toEndOf="@+id/imageViewPlayer"
                android:layout_marginStart="8dp"/>
        <View
                android:id="@+id/last_drill_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewPlayer"
                app:layout_constraintTop_toBottomOf="@+id/drill"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/yellow_card"
                android:id="@+id/imageViewYellowCard"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPlayer"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/yellow_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_yellow_cards"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPlayer"
                app:layout_constraintStart_toEndOf="@+id/imageViewYellowCard"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/yellow_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yellow_cards"
                app:layout_constraintTop_toBottomOf="@+id/player_yellow_cards"
                app:layout_constraintStart_toEndOf="@+id/imageViewYellowCard"
                android:layout_marginStart="8dp"/>
        <View
                android:id="@+id/yellow_cards_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewYellowCard"
                app:layout_constraintTop_toBottomOf="@+id/yellow_cards"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/red_card"
                android:id="@+id/imageViewRedCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewYellowCard"/>
        <TextView
                android:text="@string/red_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/player_red_cards"
                app:layout_constraintStart_toEndOf="@+id/imageViewRedCard"
                android:layout_marginStart="05dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewYellowCard"/>
        <TextView
                android:text="@string/red_cards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/red_cards"
                app:layout_constraintStart_toEndOf="@+id/imageViewRedCard"
                android:layout_marginStart="05dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/player_red_cards"/>

        <View
                android:id="@+id/red_cards_divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/shade_gray"
                app:layout_constraintStart_toEndOf="@+id/imageViewRedCard"
                app:layout_constraintTop_toBottomOf="@+id/red_cards"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</layout>