<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:map="http://schemas.android.com/apk/res-auto"


>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_location"

               />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                >

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/places_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_location_name"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="395dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/place_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_location_detail"/>
        </com.google.android.material.textfield.TextInputLayout>


        <Button
                android:text="@string/register_new_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_place_button"/>
        <Button
                android:text="marcar mapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/map_marker_button"/>

        <com.google.android.gms.maps.MapView
                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/register_map"
                map:uiZoomGestures="false"/>

    </LinearLayout>
</layout>